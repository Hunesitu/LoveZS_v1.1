# ========================================
# Django 运行环境
# ========================================
DJANGO_ENV=production
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=please-change-to-a-strong-random-secret
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost,SERVER_PUBLIC_IP

# ========================================
# 数据库配置（docker-compose.prod.yml 使用同名变量）
# ========================================
USE_POSTGRES=True
DB_NAME=lovezs
DB_USER=lovezs
DB_PASSWORD=change_me_strong_password
DB_HOST=postgres
DB_PORT=5432

# ========================================
# JWT
# ========================================
JWT_SECRET_KEY=please-change-to-a-strong-random-jwt-key
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=10080

# ========================================
# CORS（IP 阶段，先填 IP；域名上线后改为 https://your-domain）
# ========================================
CORS_ALLOWED_ORIGINS=http://SERVER_PUBLIC_IP

# ========================================
# 上传与日志
# ========================================
MAX_UPLOAD_SIZE=10485760
LOG_LEVEL=INFO
LOG_DIR=logs

# ========================================
# 安全开关
# 备案前仅 IP 调试阶段：False
# 域名 + HTTPS 正式上线：True
# ========================================
ENABLE_HTTPS_SECURITY=False

